/* pages/moudleA/pages/systemItem/systemItem.wxss */
.container {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f5f5f5;
}

/* white-space: nowrap:文本不会换行，文本会在在同一行上继续，直到遇到 <br> 标签为止。 */
.scroll-title {
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
  background-color: #ffffff;
}

.title-item {
  margin-left: 30rpx;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
}

.sv_list {
  width: 100%;
  position: absolute;
  top: 80rpx;
  bottom: 0;
}

.v_item {
  margin-left: 32rpx;
  margin-right: 32rpx;
  margin-top: 32rpx;
  height: 300rpx;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-shadow: 2px 2px 8px #aaa;
  border-radius: 10rpx;
}

.v_item .v_item_title {
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #333333;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-weight: 600;
}

.v_item .v_author_time {
  margin-bottom: 20rpx;
  margin-right: 30rpx;
  margin-left: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}