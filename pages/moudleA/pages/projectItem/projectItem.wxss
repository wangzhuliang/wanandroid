/* pages/moudleA/pages/projectItem/projectItem.wxss */
page {
  background-color: #f5f5f5;
}
.v_all {
  display: flex;
  flex-direction: column;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.v_title {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 36rpx;
  color: #333333;
  text-align: center;
  font-weight: 600;
}

.v_message_all {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.v_message {
  width: 290rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.v_text {
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  width: 290rpx;
  height: auto;
  word-wrap: break-word;
}

.iv_message {
  width: 400rpx;
}

.v_introduce {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}