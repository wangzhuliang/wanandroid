<view class="card" style="position: absolute; left:{{left}}rpx; top:{{topDistance}}px; margin-top:{{top}}rpx; z-index:{{indexOne}};"id="cardOne" bindtouchstart="bindtouchstart" bindtouchmove="bindtouchmove" bindtouchend="bindtouchend" catchtap="toPattern">
