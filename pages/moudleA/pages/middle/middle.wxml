<view class="v_all">
  <view class="v_item">
    <view class="v_button" bindtap="circulationMode">循环模式(默认)</view>
    <view class="v_button" bindtap="decreaseMode">递减模式</view>
  </view>
  <view class="v_item">
    <view class="v_button" bindtap="previousPage">上一页</view>
    <view class="v_button" bindtap="reset">重置</view>
  </view>
</view>








