<navBar title='展示' back="{{true}}" bindback="gobackClick"></navBar>

<view class="card" style="position: absolute; left:{{left}}rpx; top:{{topDistance}}px; margin-top:{{top}}rpx; z-index:{{indexThree}};"id="cardThree" bindtouchstart="bindtouchstart" bindtouchmove="bindtouchmove" bindtouchend="bindtouchend" catchtap="toPattern">
  <!-- <view>{{numberThree%5+1}}</view>
  <view>{{nameThree}}</view> -->
  <image src="{{imageThree}}" class="iv_card"></image>
</view>

<view class="card" style="position: absolute; left:{{left}}rpx; top:{{topDistance}}px; margin-top:{{top}}rpx; z-index:{{indexTwo}};"id="cardTwo" bindtouchstart="bindtouchstart" bindtouchmove="bindtouchmove" bindtouchend="bindtouchend" catchtap="toPattern">
